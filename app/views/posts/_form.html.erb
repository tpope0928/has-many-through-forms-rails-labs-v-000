<%= form_for @post do |f| %>
    Post Title: <%= f.text_field :title %><br>
    Content: <%= f.text_area :content %><br>

    <%= f.label "Category(s):" %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
    <%= f.label "Create new Category:" %>
    <%= f.fields_for :categories, post.categories.build do |categories_attributes| %>
        <%= categories_attributes.text_field :name %>
    <% end %><br>
    <%= f.submit %>
<% end %>
